<main class="contenedor">
    <form class="default-form" method="POST" action="/vacantes/editar/{{vacante.url}}">
        <h3>Información General</h3>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" placeholder="Ej: React Developer" value="{{vacante.titulo}}" required/>
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" placeholder="Ej: facebook" value="{{vacante.empresa}}" required/>
        </div>
        <div class="campo">
            <label>Ubicacion</label>
            <input type="text" name="ubicacion" placeholder="Ej: Los Angeles" value="{{vacante.ubicacion}}" required/>
        </div>
        <div class="campo">
            <label>Salario {USD}</label>
            <input type="text" name="salario" placeholder="Ej: 5000 USD" value="{{vacante.salario}}" required/>
        </div>
        <div class="campo">
            <label>Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>--Selecciona--</option>
                    <option value="freelance">Freelance</option>
                    <option value="completo">Tiempo Completo</option>
                    <option value="medio">Medio Tiempo</option>
                    <option value="proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripción del puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion del puesto</label>
            <input type="hidden" id="x" value="{{vacante.descripcion}}" name="descripcion"/>
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills"/>
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>