<main
    class="lista-candidatos"
>
    <h2>Lista de candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos as |candidato| }}
            <div class="candidato">
                <div class="caja">
                    <p class="etiqueta">Nombre</p>
                    <p class="nombre">{{candidato.nombre}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Email</p>
                    <p class="nombre">{{candidato.email}}</p>
                </div>
                <div class="caja">
                    <a href="/uploads/cv/{{cv}}" class="btn btn-verde">Ver Cv</a>
                    <p class="nombre">{{candidato.nombre}}</p>
                </div>
            </div>

        {{/each}}
    {{else}}
        <p>No hay candidatos aun</p>
    {{/if}}

</main>